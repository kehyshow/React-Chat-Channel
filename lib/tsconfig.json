{
  "compilerOptions": {
    "declaration": true,
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "esnext"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "src/**/*.test.tsx"],
  "baseUrl": "./src",
  "paths": {
    "@src/*": ["src/*"],
    "@test/*": ["test/*"],
  }
}
